{
    "root": true,
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "env": {
        "es2021": true,
        "node": true
    },
    "rules": {
        "no-console": "error",
        // Indent with 2 spaces
        "indent": [
            "error",
            2
        ],
        // Indent JSX with 2 spaces
        "react/jsx-indent": [
            "error",
            2
        ],
        // Indent props with 2 spaces
        "react/jsx-indent-props": [
            "error",
            2
        ]
    }
}
